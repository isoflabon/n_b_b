<div class = "pase">
<h1 class = "pase_name">お悩み一覧</h1>

  <div class="btn-group category-position">
    <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      カテゴリー : <%= @janru %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <div class="category">
        <li><%= link_to("すべて", category: 0) %></li>
        <li><%= link_to("片想い", category: 1) %></li>
        <li><%= link_to("交際中", category: 2) %></li>
        <li><%= link_to("デート", category: 3) %></li>
        <li><%= link_to("プレゼント", category: 4) %></li>
        <li><%= link_to("恋愛観", category: 5) %></li>
        <li><%= link_to("ケンカ", category: 6) %></li>
        <li><%= link_to("浮気", category: 7) %></li>
        <li><%= link_to("性事情", category: 8) %></li>
      </div>
    </ul>
  </div>

<!-- カテゴリーごとの一覧表示 -->
<br class="main posts-index">
<% if current_user %>
  <% if current_user.gender == "male" %>
  <% end %>
<% end %>

  <div class="container">
    <% @posts.each do |post| %>
    <% reply_count = Reply.where(post_id: post.id,p_id: 0).count %>
      <div class="posts-index-item box7">
        <p>タイトル:   <%= post.title %></p>
        <br>
        <p> <%= post.content.truncate(40) %>
        <%= link_to("もっと見る", "/posts/#{post.id}") %></p>
        <br>
        <% if post.category == "onewaylove" %>
          <span class="label label-onewaylove">片思い</span>
        <% elsif post.category == "date" %>
          <span class="label label-danger">デート</span>
        <% elsif post.category == "together" %>
          <span class="label label-info">交際中</span>
        <% elsif post.category == "present" %>
          <span class="label label-success">プレゼント</span>
        <% elsif post.category == "lovevision" %>
          <span class="label label-warning">恋愛観</span>
        <% elsif post.category == "battle" %>
          <span class="label label-battle">ケンカ</span>
        <% elsif post.category == "sexual" %>
          <span class="label label-primary">性事情</span>
        <% elsif post.category == "affair" %>
          <span class="label label-affair">浮気</span>
        <% elsif post.category == "other" %>
          <span class="label label-default">その他</span>
        <% end %>

        <p class="comment-num">コメント数 (<%= reply_count%>)</p>
        <br>
      </div>
    <% end %>
  </div>
</div>
<br>
</div>
