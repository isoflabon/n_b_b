<h1>詳細ページ</h1>
<%= link_to("投稿一覧ページ", "/") %>

<!-- rails routesでrouteをみると宛先わかりやすい -->

<div class="posts-index-item">
<%= form_tag("/posts/#{@post.id}", method: 'put')  do %>
title:  <%= @post.title %> <br>
content:<br>
<textarea name="content"> <%= @post.content %> </textarea>
<input type="submit" value="保存する">
<% end %>
</div>
<!-- 保存するボタンはあるけどキャンセルボタンがあるといいのかもしれない -->

<pre>

</pre>

<div class="container">
  <% @replies.each do |reply| %>
    <div class="posts-index-item">
          コメント: <%= reply.content %><br>
      ---------------------------------------------------------------------------------------
    </div>
  <% end %>
</div>
