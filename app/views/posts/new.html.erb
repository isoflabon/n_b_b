<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">

<!--最小限のビューポート設定-->
<meta name="viewport" content="width=device-width">
</head>

<body>
<ul class="page">
<li class="center"><a href="/"><img src="/back5.jpg" width="20" height="30" class="logo"></a>悩みを投稿する</li>
<!--<img src="/back5.jpg" width="20" height="30" class="logo">-->
<!--<img src="/back.jpeg" width="50" height="50" class="logo">-->
</ul>
 <div class="main posts-new">
   <div class="container">
     <p class="form-heading"></p>
     <%= form_tag("/posts", method: :post) do %>
       <div class="form-group">

         <div class="form-title">
           <span class="aaa">タイトル</span>
           <textarea name="title" class="round_off form-control"rows="2" cols="60"></textarea>
         </div>

         <div class="form-body">
           <span class="aaa">内容</span>
           <textarea name="content" class="round_off form-control" rows="5" cols="60"></textarea>

         </div>

         <!-- enumを使っているのでparamの値はpost.rbに書かれている数字ではない方でも渡せる -->
         <%= form_for(@post) do |f| %>
         <div class="field">
           <span class="category_type">カテゴリー</span><br>
           <div class="radio-inline">
             <%= f.radio_button :category, :onewaylove %>
             <%= f.label "片想い", class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :together %>
             <%= f.label :交際中, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :date %>
             <%= f.label :デート, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :present %>
             <%= f.label :プレゼント, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :lovevision %>
             <%= f.label :恋愛観, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :battle %>
             <%= f.label :ケンカ, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :affair %>
             <%= f.label :浮気, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :sexual %>
             <%= f.label :性事情, class: "category_type_label" %>
           </div>
           <div class="radio-inline">
             <%= f.radio_button :category, :other %>
             <%= f.label :その他, class: "category_type_label" %>
           </div>
         </div>
         <% end %>

           <li class="contribution"> <input type="submit" value="投稿"></li>

        <!-- <div class="form-tag">
         <span class="aaa"> タグ </span>
         <textarea name="content" class="round_off" rows="2" cols="60"></textarea>
       </div> -->
       </div>
     <% end %>
   </div>
 </div>
<!--<%= link_to("投稿内容がうまく書けない方はこちら","/")%>-->
</body>
