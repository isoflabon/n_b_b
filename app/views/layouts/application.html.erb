<!DOCTYPE html>
<html>
  <head>
    <title>NBB</title>
    <%= csrf_meta_tags %>

    <!--<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-sidebar/3.1.0/jquery.sidebar.min.js"></script>-->


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  </head>
  <body class="hold-transition skin-blue sidebar-mini">


<div class="wrapper">


  <header class="main-header">

    <!-- Logo -->
    <a href="/posts" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-lg"><b>アトオス</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"></span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">

          <!-- Tasks: style can be found in dropdown.less -->
          <!--Facebooklogin-->
          <% if current_user && current_user.gender == "male"%>
            <li class="user user-menu">
              <a href="/posts/new">
                <img src="/toukou.png" class="user-image" alt="User Image">
                <span class="hidden-xs">悩みを相談する</span>
              </a>
            </li>
          <% end %>
          <% if current_user == nil%>
            <li class="user user-menu">
              <a href="/users/auth/facebook">
                <img src="/logo-facebook.png" class="user-image" alt="User Image">
                <span class="hidden-xs">Facebookでログイン</span>
              </a>
            </li>
          <% else %>
          <!-- User Account: style can be found in dropdown.less -->
            <li class="dropdown user user-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src="/man_user.jpeg" class="user-image" alt="User Image">
                <span class="hidden-xs">User_name</span>
              </a>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header">
                  <img src="/man_user.jpeg" class="img-circle" alt="User Image">

                  <p>
                    User_name
                    <!--<small>Member since Nov. 2012</small>-->
                  </p>
                </li>
                <!-- Menu Body -->
                <li class="user-body">
                  <div class="row">
                    <div class="col-xs-4 text-center">
                      <a href="#">Followers</a>
                    </div>
                    <div class="col-xs-4 text-center">
                      <a href="#">コメント</a>
                    </div>
                    <div class="col-xs-4 text-center">
                      <a href="#">Friends</a>
                    </div>
                  </div>
                  <!-- /.row -->
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">プロフィール</a>
                  </div>
                  <div class="pull-right">
                    <a class="btn btn-default btn-flat" rel="nofollow" data-method="delete" href="/users/sign_out">ログアウト</a>
                  </div>
                </li>
              </ul>
            </li>
          <% end %>
          <!-- Control Sidebar Toggle Button -->
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>
        </ul>
      </div>

    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <% if current_user %>
        <div class="user-panel">
          <div class="pull-left image">
            <img src="/man_user.jpeg" class="img-circle" alt="User Image">
          </div>
          <div class="pull-left info">
            <p>User_name</p>
          </div>
        </div>
      <% end %>
      <!-- search form -->
      <!-- <form action="#" method="get" class="sidebar-form">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="Search...">
          <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                  <i class="fa fa-search"></i>
                </button>
              </span>
        </div>
      </form> -->
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>

        <li>
          <a href="/">
            <!--<i class="fa fa-dashboard"></i>--> <span>TOP</span>
            <span class="pull-right-container">
              <!--<small class="label pull-right bg-green">new</small>-->
            </span>
          </a>
        </li>
        <li>
          <a href="/posts">
            <!--<i class="fa fa-book"></i>--> <span>投稿一覧</span>
            <!-- <span class="pull-right-container">
              <small class="label pull-right bg-green">new</small>
            </span> -->
          </a>
        </li>

        <!-- <li>
          <a href="pages/mailbox/mailbox.html">
            <span>設定</span>
            <span class="pull-right-container">
              <small class="label pull-right bg-yellow">12</small>
              <small class="label pull-right bg-green">16</small>
              <small class="label pull-right bg-red">5</small>
            </span>
          </a>
        </li> -->

        <!-- <li>
          <a href="pages/mailbox/mailbox.html">
             <span>お問い合わせ</span>
          </a>
        </li> -->


      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>
  <div class="content-wrapper">
   <!--アラートやメッセーじを表示する -->
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <% if current_user %>
      <% if current_user.gender == "male" %>
        <pre>男性でログインしています </pre>
      <% end %>
      <% if current_user.gender == "female" %>
        <pre>女性でログインしています </pre>
      <% end %>
    <% else %>
      <pre>ログアウトしています </pre>
    <% end %>


  <%= yield %>
  </div>
</div>
  </body>
</html>
