<h2 id = "user_touroku">会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div id = "user_touroku_main" class="field">
    <label class = "form_name"><%= f.label :ユーザ名 %></label><br />
    <input autofocus="autofocus" type="text" name="user[username]" id="user_username" type="text" class="form-control touroku_information" placeholder="Username" aria-describedby="basic-addon1">
  </div>
  <br>

  <div id = "user_touroku_main" class="field">
    <label class = "form_name"><%= f.radio_button :gender, "male" %>男</label>
    <label class = "form_name"><%= f.radio_button :gender, "female" %>女</label>
  </div>
  <br>

  <div id = "user_touroku_main" class="field">
    <label class = "form_name"><%= f.label :メールアドレス %></label><br />
    <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" type="text" class="form-control touroku_information" placeholder="Mail Address" aria-describedby="basic-addon1">
  </div>

  <div id = "user_touroku_main" class="field">
    <label class = "form_name"><%= f.label :パスワード %></label>
    <% if @minimum_password_length %>
    <em>(最低 <%= @minimum_password_length %>文字 )</em>
    <% end %><br />
    <input autocomplete="off" type="password" name="user[password]" id="user_password" type="text" class="form-control touroku_information" placeholder="Password" aria-describedby="basic-addon1">
  </div>

  <div id = "user_touroku_main" class="field">
    <label class = "form_name"><%= f.label :パスワード確認 %></label><br />
    <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation" type="text" class="form-control touroku_information" placeholder="Password_confirmation" aria-describedby="basic-addon1">
  </div>


  <div id = "user_touroku_main" class="actions">
    <main id = "user_touroku"></main>
    <button type="submit" name="commit" value="会員登録" data-disable-with="会員登録" type="button" class="btn btn-default btn-lg user_touroku">会員登録</button>
  </div>
<% end %>



<%= render "devise/shared/links" %>
